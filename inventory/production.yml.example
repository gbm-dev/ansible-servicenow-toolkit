---
# Production Inventory for Ansible ServiceNow ITSM Integration
# This inventory defines network devices and their monitoring configuration

all:
  children:
    # Network Infrastructure Groups
    network_devices:
      children:
        core_switches:
          hosts:
            core-sw-01:
              ansible_host: 192.168.1.10
              ansible_network_os: ios
              ansible_user: admin
              device_asset_tag: "NET001"
              device_location: "Datacenter A - Rack 1"
              device_role: "Core Switch"
              
            core-sw-02:
              ansible_host: 192.168.1.11
              ansible_network_os: ios
              ansible_user: admin
              device_asset_tag: "NET002"
              device_location: "Datacenter A - Rack 2"
              device_role: "Core Switch"
              
        access_switches:
          hosts:
            access-sw-01:
              ansible_host: 192.168.1.20
              ansible_network_os: ios
              ansible_user: admin
              device_asset_tag: "NET003"
              device_location: "Building A - Floor 1"
              device_role: "Access Switch"
              
            access-sw-02:
              ansible_host: 192.168.1.21
              ansible_network_os: ios
              ansible_user: admin
              device_asset_tag: "NET004"
              device_location: "Building A - Floor 2"
              device_role: "Access Switch"
              
        routers:
          hosts:
            edge-rtr-01:
              ansible_host: 192.168.1.1
              ansible_network_os: ios
              ansible_user: admin
              device_asset_tag: "NET005"
              device_location: "Datacenter A - DMZ"
              device_role: "Edge Router"
              
    # Optional: Monitoring priority groupings
    critical_devices:
      hosts:
        core-sw-01:
        core-sw-02:
        edge-rtr-01:
        
    standard_devices:
      hosts:
        access-sw-01:
        access-sw-02:
---
# Network device specific configuration
# Applied to all devices in the network_devices group

# Connection Settings
ansible_connection: ansible.netcommon.network_cli
ansible_network_cli_ssh_type: paramiko
ansible_command_timeout: 60
ansible_connect_timeout: 30
ansible_persistent_command_timeout: 60
ansible_persistent_connect_timeout: 30

# Authentication
# Note: Individual device credentials should be in host_vars/ or vault
ansible_user: "{{ device_username | default('admin') }}"
ansible_password: "{{ device_password | default(vault_device_password) }}"
ansible_become: true
ansible_become_method: enable
ansible_become_password: "{{ device_enable_password | default(vault_device_enable_password) }}"

# ServiceNow Integration Settings for Network Devices
incident_assignment_group: "network.operations"
incident_category: "network" 
incident_subcategory: "connectivity"

# Monitoring Configuration
monitoring_enabled: true
connectivity_monitoring_enabled: true
interface_monitoring_enabled: true
config_backup_enabled: true
log_collection_enabled: true

# Default monitoring intervals (can be overridden per device group)
connectivity_check_interval: "*/5 * * * *"  # Every 5 minutes
interface_check_interval: "*/10 * * * *"    # Every 10 minutes
config_backup_interval: "0 2 * * *"         # Daily at 2 AM

# Storage paths for monitoring data
connectivity_monitoring_storage_path: "{{ monitoring_storage_base | default('/var/lib/ansible') }}/connectivity"
interface_monitoring_storage_path: "{{ monitoring_storage_base | default('/var/lib/ansible') }}/interfaces"
config_backup_storage_path: "{{ backup_storage_path | default('/var/lib/ansible/backups') }}"
log_collection_storage_path: "{{ log_storage_path | default('/var/lib/ansible/logs') }}"

# Network Device Specific ServiceNow Settings
network_incident_urgency: "high"
network_incident_impact: "medium"
network_problem_urgency: "medium" 
network_problem_impact: "medium"

# Device categorization for different monitoring strategies
device_criticality: "standard"  # Can be: critical, standard, low
device_maintenance_window: "02:00-04:00"  # Default maintenance window